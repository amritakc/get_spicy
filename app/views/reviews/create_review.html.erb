<h1>Create Review</h1>

<div class ="col-sm-4">	
	<form role="form" action ="/review" method ="post">

	  <input name ="authenticity_token" value ="<%= form_authenticity_token%>" type="hidden">

	  <div class="form-group">
	    <label for="restaruant">Restaurant:</label>
	    <input type="restaruant" class="form-control" id="restaruant" name="review[restaruant]">
	  </div>

	  <div class="form-group">
	    <label for="dish">Dish:</label>
	    <input type="dish" class="form-control" id="dish" name="review[dish]">
	  </div>

	  <div class="form-group">
	    <label for="spice_level">Spice Level:</label>
	    <input type="spice_level" class="form-control" id="spice_level" name="review[spice_level]">
	  </div>

	  <div class="form-group">
	    <label for="review">Review:</label>
	    <input type="review" class="form-control" id="review" name="review[review]">
	  </div>

	  <button type="submit" class="btn btn-default">Submit</button>
	</form>
</div>